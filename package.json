{
  "name": "playwright-bdd-allure",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "bddgen": "bddgen --config config/playwright.config.ts",
    "test:runner": "ts-node scripts/test-runner.ts",
    "test": "npm run test:runner",
    "test:headed": "npm run test:runner -- --headed",
    "test:chromium": "npm run test:runner -- --browser chromium",
    "test:firefox": "npm run test:runner -- --browser firefox",
    "test:login": "npm run test:runner -- --grep @login",
    "test:logout": "npm run test:runner -- --grep @logout",
    "test:home": "npm run test:runner -- --grep @home",
    "test:products": "npm run test:runner -- --grep @products",
    "test:shop": "npm run test:runner -- --grep @shop",
    "test:signup": "npm run test:runner -- --grep @createaccount",
    "allure:serve": "allure serve reports/allure-results",
    "allure:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "allure:open": "allure open reports/allure-report",
    "clean:allure": "rm -rf reports/allure-results && rm -rf reports/allure-report",
    "clean:playwright": "rm -rf reports/playwright",
    "clean:all": "npm run clean:allure && npm run clean:playwright",
    "open:playwright": "npx playwright show-report reports/playwright",
    "lint": "eslint . --config config/eslint.config.mjs",
    "lint:fix": "eslint . --fix --config config/eslint.config.mjs"
  },
  "keywords": [],
  "author": "Alejandro Amerisse",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@cucumber/cucumber": "12.3.0",
    "@eslint/js": "9.39.1",
    "@faker-js/faker": "10.1.0",
    "@playwright/test": "1.57.0",
    "@types/node": "24.10.1",
    "allure-playwright": "3.4.3",
    "dotenv": "17.2.3",
    "eslint": "9.39.1",
    "eslint-plugin-playwright": "2.4.0",
    "playwright": "1.57.0",
    "playwright-bdd": "8.4.2",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1"
  }
}